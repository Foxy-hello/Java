<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:context="http://www.springframework.org/schema/context"
 xmlns:mvc="http://www.springframework.org/schema/mvc"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/mvc 
    http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">
    
    <context:component-scan base-package="com.bawei"></context:component-scan>
    
    <!-- 配置拦截器 <bean class="指定自定义拦截器的全类名">-->
    <mvc:interceptors>
        <!-- 配置第一个拦截器 -->
    	<bean class="com.bawei.intercepter.FristIntercepter"/>
    	<!-- 配置拦截路径  path="拦截路径"-->
    	<mvc:interceptor>
    		<mvc:mapping path="/test2"/>
    		<bean class="com.bawei.intercepter.SecondIntercepter"/>
    	</mvc:interceptor>
    	
    </mvc:interceptors>
</beans>    