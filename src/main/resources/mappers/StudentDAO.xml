<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bwie.dao.StudentDAO">

    <select id="findStudentList" parameterType="map" resultType="Student">
        select * from t_student
        <where>
            <if test="mohu!=null and mohu!=''">
                and name like concat('%',#{mohu},'%')
            </if>
        </where>
    </select>
    
    <select id="findStudentListByParam" parameterType="map" resultType="Student">
        select * from  t_student

        <where>
            <if test="mohu!=null and mohu!=''">
                and name like concat('%',#{mohu},'%')
            </if>
        </where>
            limit #{pageUtil.startIndex},#{pageUtil.pageSize}
    </select>
    
    <select id="login" parameterType="User" resultType="User">
        select * from t_user where name = #{name} and pwd = #{pwd}
    </select>
</mapper>